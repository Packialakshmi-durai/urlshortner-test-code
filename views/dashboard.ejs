<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script type="text/javascript" src="js/angular_script.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <title>URLShortener</title>
</head>

<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <br>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullurl" class="sr-only">FULL URL</label>
            <input required placeholder="url" type="url" name="fullurlinput" id="fullurlid"
                class="form-control col mr-2" />
            <button class="btn btn-success">shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Shorted URL</th>
                    <th>Count Of Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <button type="button" name="back"><a href="/">Back</a></button>
</body>

</html>